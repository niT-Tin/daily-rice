{
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility"
        },
        {
          "command": "workbench.action.toggleActivityBarVisibility",
          "when": "!terminalFocus" // 防止在终端中使用该快捷键
        }
        // "workbench.action.toggleSidebarVisibility"
      ],
    },
    {
      "before": [
        "ctrl+w l"
      ],
      "commands": [
        "workbench.action.focusNextGroup"
      ],
      "when": "explorerViewletFocus && !inputFocus"
    },
    {
      "before": [
        "<leader>",
        "b",
        "b"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ],
      "when": "editorTextFocus && !editorReadonly"
    },
    {
      "before": [
        "<leader>",
        "b",
        "n"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ],
      "when": "editorTextFocus && !editorReadonly"
    },
    {
      "before": [
        "<leader>",
        "b",
        "k"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ],
      "when": "editorTextFocus && !editorReadonly"
    },
    {
      "before": [
        "<leader>",
        "s",
        "t"
      ],
      "commands": [
        "actions.find"
      ]
    },
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.referenceSearch.trigger",
      ],
      "when": "editorTextFocus && vim.active && !suggestWidgetVisible && !inQuickOpen"
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ],
      "when": "!editorFocus"
    }
  ],
  "editor.inlineSuggest.enabled": true,
  "editor.wordWrap": "on",
  "explorer.compactFolders": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": false
  },
  "editor.formatOnSave": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontWeight": "bold",
  "editor.fontSize": 17,
  "editor.stickyScroll.enabled": true,
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  "editor.guides.bracketPairs": true,
  "editor.smoothScrolling": true,
  "dart.flutterRunAdditionalArgs": [
    "--no-sound-null-safety"
  ],
  "terminal.integrated.inheritEnv": false,
  "haskell.manageHLS": "GHCup",
  "go.goroot": "/home/liuzehao/applications/go",
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/home/liuzehao/applications/jdks/jdk-17.0.6"
    }
  ],
  "boot-java.rewrite.reconcile": true,
  "window.titleBarStyle": "custom",
  "vscode_custom_css.imports": [
    "file:///home/liuzehao/.config/Code/User/cuscss/custom.css"
  ],
  "editor.cursorBlinking": "expand",
  "dart.flutterSdkPath": "/home/liuzehao/applications/flutter",
  "[python]": {
    "editor.formatOnType": true
  },
  "git.ignoreLegacyWarning": true,
  "rust-analyzer.trace.extension": true,
  "tabnine.experimentalAutoImports": true,
  "[go]": {
    "editor.inlayHints.padding": false,
    "editor.inlayHints.enabled": "on",
  },
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.compositeLiteralTypes": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.functionTypeParameters": true,
  "python.analysis.inlayHints.callArgumentNames": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js", //class keyword
          "entity.name.method.js",
          "entity.name.class.js",
          "entity.name.tag.doctype",
          "entity.other.attribute-name",
          "entity.other.attribute-name.tag.jade",
          "entity.other.attribute-name.tag.pug",
          "entity.name.function",
          "entity.name.function.member",
          "string",
          "other"
        ],
        "settings": {
          "fontStyle": "italic bold"
        }
      }
    ]
  },
  "editor.foldingImportsByDefault": true,
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "explorer.fileNesting.enabled": true,
  "Codegeex.Privacy": true,
  "Codegeex.Explanation.LanguagePreference": "中文",
  "Codegeex.Comment.LanguagePreference": "中文",
  "workbench.colorTheme": "Ayu Dark Bordered",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "go.toolsManagement.autoUpdate": true,
  "Codegeex.EnableExtension": false,
  "editor.cursorSmoothCaretAnimation": "on"
}